<% flash.each do |key, value| %>
    <div class="success"><strong><%= value %></strong></div>
<% end %>

<h1>Listing articles</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="2"></th>
    </tr>

    <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><button><%= link_to 'Show', article_path(article) %></button></td>
        <td><button><%= link_to 'Edit', edit_article_path(article) %></button></td>
    </tr>
    <% end %>
</table>
<br>

<%= link_to "New Article", new_article_path %>